@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Wijzig wachtwoord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-12 py-lg-0 py-md-5">
        <h4>@ViewData["Title"]</h4>
        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <form id="change-password-form" method="post" oninput='ConfirmPassword.setCustomValidity(ConfirmPassword.value != Password.value ? "Passwords do not match." : "")' novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="form-control form-validation" required />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input id="Password" asp-for="Input.NewPassword" class="form-control form-validation" required />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input id="ConfirmPassword" asp-for="Input.ConfirmPassword" class="form-control form-validation" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark w-100">Wijzig wachtwoord</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}