@page
@model IndexModel
@{
    ViewData["Title"] = "Wijzig gegevens";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-12 py-lg-0 py-md-5">
        <h4>@ViewData["Title"]</h4>
        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <form id="profile-form" class="w-100 needs-validation" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Input.UserName">Gebruikersnaam</label>
                    
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend">&#64;</span>
                        </div>
                        <input asp-for="Input.UserName" aria-describedby="inputGroupPrepend" class="form-control form-validation" required/>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control form-validation" required />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control form-validation" required />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.Street"></label>
                    <input asp-for="Input.Street" class="form-control form-validation" required />
                    <span asp-validation-for="Input.Street" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4 col-8">
                    <label asp-for="Input.HouseNumber"></label>
                    <input asp-for="Input.HouseNumber" class="form-control form-validation" required />
                    <span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
                </div>

                <div class="form-group col-md-2 col-4">
                    <label asp-for="Input.HouseNumberAddition"></label>
                    <input asp-for="Input.HouseNumberAddition" class="form-control form-validation" />
                    <span asp-validation-for="Input.HouseNumberAddition" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-4">
                    <label asp-for="Input.ZipCode"></label>
                    <input asp-for="Input.ZipCode" class="form-control form-validation" required />
                    <span asp-validation-for="Input.ZipCode" pattern="[1-9][0-9]{3}\s?[a-zA-Z]{2}" class="text-danger"></span>
                </div>
                        
                <div class="form-group col-8">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control form-validation" required/>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-check">
                    <input type="checkbox" asp-for="Input.IsAnonymous" class="form-check-input">
                    <label class="form-check-label" asp-for="Input.IsAnonymous">Ik wil anoniem blijven</label>
                </div>
            </div>
            
            <div class="form-row py-3">
                <button id="update-profile-button" type="submit" class="btn btn-dark w-100">Opslaan</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}