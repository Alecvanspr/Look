@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Verwijder persoonlijke data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-lg-end justify-content-center">
    <div class="col-lg-10 col-12 py-lg-0 py-md-5">
        <h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Het verwijderen van deze data verwijderd je account permanent. Dit kan niet worden teruggedraaid.</strong>
    </p>
</div>

<div>
    <form id="delete-user" class="w-100 needs-validation" method="post" class="form-group" novalidate>
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control form-validation" required/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger w-100" type="submit">Verwijder data en sluit account</button>
    </form>
</div>

</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}