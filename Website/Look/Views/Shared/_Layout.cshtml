<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Look</title>
    <partial name="_Favicons.cshtml" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm text-dark bg-white">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="w-100" alt="Het logo van Look" src="~/images/FINAL_OFF_BLACK_FULL_TRANSPARENT.png"/>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="navbar-toggler-icon nav-link fas fa-bars text-dark"></i>
                </button>

                <div class="navbar-collapse collapse justify-content-between">
                    <ul class="nav">
                        <li class="nav-item text-center">
                        </li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item text-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">link</a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">link</a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">link</a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">link</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-right justify-content-center">
                        <li class="nav-item text-center">
                            <a class="nav-social nav-link text-dark" href="#">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-social nav-link text-dark" href="#">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-social nav-link text-dark" href="#">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                        </li>
                        <li class="nav-item text-center">
                            <button type="button" class="btn btn-dark nav-link">inloggen</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white bg-dark">
        <div class="container">
            <div class="row p-0 m-0">
                <div class="col-md-3 p-0 m-0">
                    <div class="row p-0 m-0 text-wrap">
                        <h6>OVER ONS</h6>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                    </div>
                    <div class="row p-0 m-0 text-wrap">
                        <h6>ABONNEER</h6>
                        <form class="form-inline form-subscribe">
                            <div class="form-group">
                                <label for="inputEmail" class="sr-only">Email</label>
                                <input type="email" class="form-control" id="inputEmail" placeholder="email">
                            </div>
                            <button type="submit" class="btn btn-secondary"><i class="fas fa-angle-right"></i></button>
                        </form>
                    </div>
                </div>
                <div class="col-md-4 p-0 m-0">
                    <h6>LAATSTE TWEETS</h6>
                </div>
                <div class="col-md-5 p-0 m-0">
                    <h6>INSTAGRAM</h6>
                </div>
            </div>
            <div class="row p-0 m-0 text-secondary text-center">
                <p>&copy; 2020 - Look</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
