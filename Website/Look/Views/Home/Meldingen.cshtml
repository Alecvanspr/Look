<header>
    <div class ="row p-0 m-0">
            <div class="col-md-2 p-0 m-0"></div>
                <div class="col-md-2 p-0 m-0">
                <button class="btn" data-toggle="modal" data-target="#NieuwBericht">Bericht maken <i class="fa fa-plus"></i></button>
                </div>
                <div class="col-md-3 p-0 m-0">
                    <input type="text" placeholder="Search.." name="search" class="col-md-6 p-0 m-0">
                    <button class="btn"><i class="fa fa-search"></i></button>
                </div>
            <div class="col-md-4 p-0 m-0">
                <a>Sorteren op:</a>
              <select name="SorterenOp" id="SorterenOp">
                <option value="SorteerNieuwsteBerichten">Nieuwste</option>
                <option value="SorteerMeesteLikes">Meeste likes</option>
                <option value="SorteerMeesteReacties">Meeste reacties</option>
            </select>
        </div>
    </div>
</header>
@foreach (var melding in meldings)
{
        <div class="row p-3 m-0">
        <div class="col-md-2 p-0 m-0"></div>
        <div class="col-md-7 p-0 m-0">
            <div class="melding rounded">
                    <article class="p-3">
                        <h2>@melding.Titel</h2>
                        <P>@melding.Inhoud.Substring(0,300)</P><a>...</a>
                        <div class="row p-0 m-0">
                        <p class="col-md-6 p-0 m-0">Categorie: @foreach (var categorie in melding.Categorieen)
                        {
                            <a>#@categorie</a>
                        }</p>
                        <p class="col-md-4 p-0 m-0">Geplaatst door: @if(melding.Auteur==null){<a>Annoniem</a>}else{<a>@melding.Auteur.VoorNaam @melding.Auteur.AchterNaam</a>}</p>
                        <button ModalMelding=@melding class="col-md-2 p-0 m-0 btn btn-primary" data-toggle="modal" data-target="#leesMeer">Lees meer...</button>
                        </div>
                    </article> 
                </div>
            </div>
        </div>
}
</div>

<!--- Modal voor het inloggen---->
<div class="modal fade bd-example-modal-lg" id="NieuwBericht" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nieuw Bericht</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="row p-0 m-0">
                <div class="col-8 p-0 m-0">
                    <a>Naam bericht:</a> 
                    <input id="NaamBericht"></input>
                 </div>
                <div class ="col-4 p-0 m-0">
                <a>Dit bericht anoniem plaatsen?</a>
                <input type="checkbox" id="AnoniemPlaatsen" class="col-5 p-0 m-0"></input>
            </div> 
        </div>
        <div class="row p-0 m-0">
            <textarea id="bericht" rows="12" cols="75" placeholder="Typ hier uw bericht in"></textarea>
        </div>
        <div class="row p-0 m-2">
            <div class="col-8 p-0 m-0">
                <a>CatagorieÃ«n:</a>
                <input>
            </div>
            <div class="col-4 p-0 m-0">
                <a>Foto toevoegen</a> 
               <button><i class="fa fa-file-photo-o"></i></button>
            </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Plaats bericht</button>
      </div>
    </div>
  </div>
</div>

<!--- Modal voor de reacties---->
