@model Look.Models.Melding

@{
    ViewData["Title"] = "Nieuw bericht";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-5">
        <h1>Nieuwe Melding</h1>
        <h4>Melding</h4>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <form asp-action="CreateMelding">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label> <!--dit is wat erboven komt te staan--> 
                <input asp-for="Titel" class="form-control" />  <!--dit is de link naar het stukje data wat het moet vervangen denk ik--> 
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inhoud" class="control-label"></label>
                <textarea asp-for="Inhoud" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Inhoud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorie" class="control-label"></label>
                <input asp-for="Categorie" class="form-control" />
                <span asp-validation-for="Categorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPrive" class="control-label"></label>
                <div class= "col-md-2">
                <input type="checkbox" asp-for="IsPrive" class="form-control" value="true"/>
                <span asp-validation-for="IsPrive" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateMelding" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Meldingen">Terug naar berichten</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
