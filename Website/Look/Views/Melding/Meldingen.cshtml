@{
    ViewData["Title"] = "Buurtmeldingen";
}
@model List<Melding>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<header>
    <div id="meldingen-header" class="container bg-white py-3">
        <div class="row m-0 bg-white py-1 text-dark justify-content-center align-content-center align-items-center">
            <div class="col-md-12 m-0 p-0 text-wrap">
                <h1 class="text-break">Buurtmeldingen</h1>
                <p class="text-secondary">
                    Bekijk hier de meldingen in je buurt.
                </p>
            </div>
        </div>
    </div>
</header>

<div id="meldingen-controls" class="container bg-white py-3">
    <div class ="row m-0 bg-white px-2 text-dark justify-content-center align-content-center align-items-center">
        <div class="col-md-4 p-2 m-0">
            <a asp-area="" asp-controller="Melding" asp-action="CreateMelding"><button class="btn btn-dark w-100" >Nieuw bericht <i class="fa fa-plus"></i></button></a>
        </div>

        <div class="col-md-4 p-2 m-0">
            <div class="form-inline form-search w-100 m-0 justify-content-center">
        <form asp-action="Meldingen" method="get">
                <input id="zoekbalk" class="form-control w-100 m-0" type="text" placeholder="Search" aria-label="Search" name="z" value="@ViewData["Zoek"]">
                 <input hidden type="text" placeholder="inputSorteer" aria-label="inputSorteer" name="s" value="@ViewData["Sorteer"]">
                <button class="btn btn-dark m-0" type="submit"><i class="fa fa-search"></i></button>
        </form>
            </div>
        </div>

        <div class="col-md-4 p-2 m-0">
            <div class="form-inline m-0 select-box">
                <select id="inputSorteer" class="form-control w-100" onchange="javascript:SorterenOpQuery(this)">
                    <option selected>Sorteren op...</option>
                    <option value="s=datum">Nieuwste</option>
                    <option value="s=likes">Meeste likes</option>
                    <option value="s=views">Meeste weergaven</option>
                    <option value="s=reacties">Meeste reacties</option>
                    <option value="s=titel">Naam</option>
                </select>
                <i class="fas fa-angle-down selector"></i>
            </div>
        </div>
    </div>
    <br />
</div>

<script>
      function SorterenOpQuery(elm)
  {
     window.location = "/Melding/Meldingen?z="+document.getElementById("zoekbalk").value+"&"+elm.value;
  }
</script>

<div id="meldingen-content" class="container bg-white py-3">
    @foreach (var Model in Model)
    {
            <div class="row m-0 bg-white py-4 text-dark align-content-end align-items-end justify-content-center">
                <div class="col-md-12 w-100 p-0 m-0">
                    <div class="melding bg-white p-4 rounded box-shadow-full">
                        <article>
                            <div class="melding-header py-1 w-100 row m-0 p-0 align-content-end align-items-end">
                                <div class="col-md-6 w-100 m-0 p-0">
                                    <h2 class="text-wrap">
                                        @Model.Titel
                                    </h2>
                                </div>
                                <div class="col-md-6 w-100 m-0 p-0 align-content-end align-items-end">
                                    <h6 class="text-secondary ls-0 float-md-right">
                                        <i class="far fa-clock"></i> 

                                        @Model.AangemaaktOp
                                    </h6>
                                </div>
                                @if(Model.IsActief==true)
                                    {
                                        <div style="height: 2px;" class="container-fluid bg-success"></div>
                                    }else
                                    {
                                        <div style="height: 2px;" class="container-fluid bg-danger"></div>
                                    }
                            </div>

                            <div class="melding-content py-2 row m-0 p-0">
                                <div class="col-md-12 m-0 p-0">
                                    <p class="text-wrap">
                                        @if(Model.Inhoud.Length>300){
                                        <p>@Model.Inhoud.Substring(0,300)...</p>
                                        }else{
                                        <p>@Model.Inhoud</p>
                                        }
                                        <a data-toggle="modal" href="#melding-@Model.MeldingId">
                                            lees meer
                                        </a>
                                    </p>
                                </div>
                            </div>

                            <div class="melding-footer py-1 m-0 p-0">
                                <hr>
                                <div class="row w-100 py-1 m-0 p-0 text-secondary">
                                    <div class="col-md-6 w-100 m-0 p-0 text-secondary">
                                        <p>
                                            <div class="categories-title d-inline">
                                                <p>Categorie:</p>
                                            </div>
                                            @foreach (var categorie in Model.Categorie)
                                            {   
                                                <div class="categories-content d-inline">
                                                    <a href="#" class="py-2 px-3 rounded-0 border categorie text-secondary">#@categorie</a>
                                                </div>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-md-6 w-100 m-0 p-0 text-secondary">
                                        <p class="float-md-right">
                                            Geplaatst door:
                                                <a href="#">
                                                    @try{
                                                    @Model.Auteur.GebruikersNaam
                                                    }catch{
                                                        <a>Annoniem</a>
                                                    }
                                                </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </div>  
    }
</div>

<!--- Modal voor een nieuw bericht---->
@foreach (var Model in Model){
<!--- Modal voor de reacties---->
<div class="modal fade bd-example-modal-lg" id="melding-@Model.MeldingId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="col-md-7">
                    <h5>@Model.Titel</h5>
                </div>
                <div class="col-md-4">
                    <h5>Geplaatst door: @try{
                                                        @Model.Auteur.GebruikersNaam
                                            }catch
                                            {
                                                    <a>Anoniem</a>
                                            } </h5>
                </div>

                    <script>
                    fetch("/Melding/Like")
                    .then(r => r.json())
                    .then(r =>document.getElementById("AantalLikes").innerHTML = r.aantal);
                    </script>

                <div class="col-md-1">
                    <a><i class="far fa-thumbs-up"></i> </a><div style="display: inline;" id="AantalLikes"></div>
                </div>
            </div>
            <div class="modal-body">
                <div class="row p-3 m-0">
                    <P>@Model.Inhoud</P>     
                </div>
                <hr/>
                <div class="col-md-2"></div>
                <!--reactie-->
                    @if(Model.Reacties==null){
                        <p>Dit bericht heeft nog geen reacties.<br>Wees de eerste!</p>
                    }else{
                            @foreach (var reacties in Model.Reacties)
                            {
                                <div class="container border col-md-8 p-2">
                                    <div class="row p-0 m-0">
                                        <div class="col-md-11">
                                        </div>
                                        <div class="col-md-1">
                                            <a><i class="far fa-thumbs-up"></i></a><p style="display: inline;">@reacties.Likes</p>
                                        </div>
                                    </div>
                                    <div class="row p-0 m-0">
                                        <p>@reacties.Bericht</p>
                                    </div>
                                </div>
                        <hr class="p-0 mt-3 mb-0 ml-0 mr-0"/>
                        }
                    }                
                </div>
            <div class="row p-2 m-1">
                <partial name="_ReactieToevoegen"/>
            </div>
        </div>
    </div>
</div>
}
<div style="text-align: center;">
    @if (ViewBag.Page > 0)
    {
        <a href="@Url.Action("Meldingen", new { page = ViewBag.Page - 1 })"
        class="btn btn-default">
        <p class="paginering"><i class="fas fa-chevron-left"></i>Vorige Pagina </p>   
        </a>
    }
    @if (ViewBag.Page < ViewBag.MaxPage)
    {
        <a href="@Url.Action("Meldingen", new { page = ViewBag.Page + 1 })"
        class="btn btn-default">
        <p class="paginering">Volgende Pagina <i class="fas fa-chevron-right"></i></p>
        </a>
    }
</div>